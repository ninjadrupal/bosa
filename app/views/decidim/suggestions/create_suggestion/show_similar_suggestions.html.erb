<% content_for :back_link do %>
  <%= link_to :back do %>
    <%= icon "chevron-left", class: "icon--small", role: "img", "aria-hidden": true %>
    <%= t(".back") %>
  <% end %>
<% end %>
<div class="row column">
  <div class="callout secondary">
    <%= t(".compare_help") %>
    <%= link_to t(".more_information"), decidim.page_path("suggestions"), target: "_blank" %>.
  </div>
</div>
<br>

<div class="row card-grid similar-suggestions">
  <%= render similar_suggestions %>
</div>

<div class="row">
  <div class="columns mediumlarge-6 small-12 mediumlarge-push-3">
    <%= link_to t(".continue"), next_wizard_path, class: "button expanded" %>
  </div>
</div>
